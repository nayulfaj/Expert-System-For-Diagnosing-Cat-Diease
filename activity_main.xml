<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="12dp"
            android:text="Pilih Gejala yang Kucing Kamu Rasakan:"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <!-- === Gejala dari JSON === -->

        <CheckBox
            android:id="@+id/checkDemam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Demam" />

        <CheckBox
            android:id="@+id/checkHilangNafsu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Hilangnya nafsu makan" />

        <CheckBox
            android:id="@+id/checkMuntah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Sering muntah" />

        <CheckBox
            android:id="@+id/checkDiareDarah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Diare disertai darah" />

        <CheckBox
            android:id="@+id/checkBuluKasar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Bulu menjadi kasar" />

        <CheckBox
            android:id="@+id/checkBauMulut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Bau mulut busuk" />

        <CheckBox
            android:id="@+id/checkBersin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Selalu bersin" />

        <CheckBox
            android:id="@+id/checkPeradanganMataHidung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Peradangan pada mata dan hidung" />

        <CheckBox
            android:id="@+id/checkAirHidung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Keluar air hidung" />

        <CheckBox
            android:id="@+id/checkAirMata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Keluar air berlebih dari mata" />

        <CheckBox
            android:id="@+id/checkLukaMulut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Terdapat luka di bibir atau lidah" />

        <CheckBox
            android:id="@+id/checkBuluPitak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Bulu pitak" />

        <CheckBox
            android:id="@+id/checkKulitKerak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Kulit berkerak dan berkerut" />

        <CheckBox
            android:id="@+id/checkLukaKoreng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Terdapat luka koreng pada kulit" />

        <CheckBox
            android:id="@+id/checkMataBengkak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Pembengkakan/radang pada mata" />

        <CheckBox
            android:id="@+id/checkCairanHidungHijau"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Keluar cairan bening atau hijau dari hidung" />

        <CheckBox
            android:id="@+id/checkPerutBuncit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Perut buncit" />

        <CheckBox
            android:id="@+id/checkBeratTurun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Berat badan menurun" />

        <CheckBox
            android:id="@+id/checkMuntahCacing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Muntah cacing" />

        <CheckBox
            android:id="@+id/checkDiareCacing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Diare cacing" />

        <CheckBox
            android:id="@+id/checkKulitJamur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Terdapat jamur di kulit" />

        <CheckBox
            android:id="@+id/checkBuluKusam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Bulu kusam" />

        <CheckBox
            android:id="@+id/checkKulitLesi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Terdapat lesi berbentuk lingkaran di kulit" />

        <CheckBox
            android:id="@+id/checkKulitBersisik"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Kulit meradang dan bersisik" />

        <CheckBox
            android:id="@+id/checkKepalaMenggelepar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Kucing sering menggeleparkan kepala" />

        <CheckBox
            android:id="@+id/checkCairanTelinga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Muncul cairan di telinga" />

        <CheckBox
            android:id="@+id/checkBauTelinga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Bau tidak sedap di telinga" />

        <CheckBox
            android:id="@+id/checkTelingaMerah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Daun telinga kemerahan" />

        <CheckBox
            android:id="@+id/checkKotoranTelinga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Kotoran dalam telinga menumpuk" />

        <CheckBox
            android:id="@+id/checkTelingaBengkak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Telinga bengkak" />

        <!-- Tombol Diagnosa -->
        <Button
            android:id="@+id/buttonDiagnosa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Lihat Hasil Diagnosa" />

        <TextView
            android:id="@+id/textHasil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text=""
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>
</ScrollView>
